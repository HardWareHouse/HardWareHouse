{{ form_start(form, {'attr': {'class': 'flex flex-col items-center justify-start pt-20 min-h-screen'}}) }}

<div class="w-full max-w-md mx-auto"> 
    {{ form_errors(form) }}

    <div class="mb-4">
        {{ form_label(form.datePaiement, 'payment_date'|trans) }}
        {{ form_widget(form.datePaiement, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.montant, 'amount'|trans) }}
        {{ form_widget(form.montant, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.methodePaiement, 'payment_method'|trans) }}
        {{ form_widget(form.methodePaiement, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.factureId, 'invoice'|trans) }}
        {{ form_widget(form.factureId, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>

    <div class="flex items-center justify-center">
        <button class="bg-darkBlue hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline forest:bg-[#786759] love:bg-[#FB6F92]" type="submit">
            {{ button_label|default('save'|trans) }}
        </button>
    </div>
</div>

{{ form_end(form) }}
