{% extends 'base.html.twig' %}

{% block title %}{{'company'|trans}}{% endblock %}

{% block body %}
    <h1>{{'company'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entreprise.id }}</td>
            </tr>
            <tr>
                <th>{{'name'|trans}}</th>
                <td>{{ entreprise.nom }}</td>
            </tr>
            <tr>
                <th>{{'address'|trans}}</th>
                <td>{{ entreprise.adresse }}</td>
            </tr>
            <tr>
                <th>{{'description'|trans}}</th>
                <td>{{ entreprise.description }}</td>
            </tr>
            <tr>
                <th>{{'tax_info'|trans}}</th>
                <td>{{ entreprise.informationFiscale }}</td>
            </tr>
            <tr>
                <th>{{'created_on'|trans}}</th>
                <td>{{ entreprise.CreatedAt ? entreprise.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_entreprise_index') }}">{{'back_to_list'|trans}}</a>

    <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}">{{'edit'|trans}}</a>

    {{ include('entreprise/_delete_form.html.twig') }}
{% endblock %}
