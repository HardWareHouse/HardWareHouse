    <div class="w-2/5 flex flex-col justify-center px-12">
        {% for flash_error in app.flashes('verify_email_error') %}
        <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700">
            {{ flash_error }}
        </div>
        {% endfor %}

        <h1 class="text-4xl font-bold mb-8 text-center text-blue-600">{{'Création de votre entreprise'|trans}}</h1>

        {{ form_start(companyCreationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div class="space-y-2">
            <label for="companyCreationForm_nom" class="text-blue-600">{{'Nom'|trans}}</label>
            {{ form_widget(companyCreationForm.nom, {'id': 'companyCreationForm_nom', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.nom) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_adresse" class="text-blue-600">{{'Adresse'|trans}}</label>
            {{ form_widget(companyCreationForm.adresse, {'id': 'companyCreationForm_adresse', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.adresse) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_codePostal" class="text-blue-600">Code postal</label>
            {{ form_widget(companyCreationForm.codePostal, {'id': 'companyCreationForm_codePostal', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.codePostal) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_ville" class="text-blue-600">Ville</label>
            {{ form_widget(companyCreationForm.ville, {'id': 'companyCreationForm_ville', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.ville) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_email" class="text-blue-600">Adresse e-mail</label>
            {{ form_widget(companyCreationForm.email, {'id': 'companyCreationForm_email', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.email) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_description" class="text-blue-600">{{'Description'|trans}}</label>
            {{ form_widget(companyCreationForm.description, {'id': 'companyCreationForm_description', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.description) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_informationFiscale" class="text-blue-600">{{'Information Fiscale'|trans}}</label>
            {{ form_widget(companyCreationForm.informationFiscale, {'id': 'companyCreationForm_informationFiscale', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.informationFiscale) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_siren" class="text-blue-600">SIREN / SIRET</label>
            {{ form_widget(companyCreationForm.siren, {'id': 'companyCreationForm_siren', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.siren) }}
        </div>

        <div class="space-y-2">
            <label for="companyCreationForm_logo" class="text-blue-600">{{'Logo de votre entreprise'|trans}}</label>
            {{ form_widget(companyCreationForm.logo, {'id': 'companyCreationForm_logo', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(companyCreationForm.logo) }}
        </div>

        
        <button type="submit"
            class="w-full bg-blue-600 text-white px-4 py-2 hover:bg-blue-700 focus:outline-none">
            {{'Créer'|trans}}
        </button>

        {{ form_end(companyCreationForm) }}
    </div>
</div>
{% endblock %}
