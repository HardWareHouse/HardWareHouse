{% extends 'base.html.twig' %}

{% block title %}{{'category'|trans}}{% endblock %}

{% block body %}
    <h1>{{'category'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>{{'name'|trans}}</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th>{{'description'|trans}}</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>{{'createdat'|trans}}</th>
                <td>{{ categorie.CreatedAt ? categorie.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categorie_index') }}">{{'back_to_list'|trans}}</a>

    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">{{'edit'|trans}}</a>

    {{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
