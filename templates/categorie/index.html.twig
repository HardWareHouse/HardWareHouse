{% extends 'base.html.twig' %}

{% block title %}{{'categories'|trans}}{% endblock %}

{% block content %}
<div class="container mx-auto my-8">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-semibold text-gray-700">{{'categories'|trans}}</h1>
        <a href="{{ path('app_categorie_new') }}"
           class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            <i class="fas fa-plus mr-2"></i> {{'new_category'|trans}}
        </a>
    </div>

    <div class="overflow-x-auto relative shadow-md sm:rounded-lg mt-6">
        <table class="w-full text-sm text-center text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="py-3 px-6">{{'name'|trans}}</th>
                    <th scope="col" class="py-3 px-6">{{'description'|trans}}</th>
                    <th scope="col" class="py-3 px-6">{{'actions'|trans}}</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for categorie in categories %}
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="py-4 px-6">{{ categorie.nom }}</td>
                    <td class="py-4 px-6">{{ categorie.description }}</td>
                    <td class="py-4 px-6">
                        <div class="flex items-center justify-center">
                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}"
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"
                                class="font-medium text-green-600 dark:text-green-500 hover:underline ml-4">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <div class="ml-4">
                                {{ include('categorie/_delete_form.html.twig', {'categorie': categorie}) }}
                            </div>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="py-4 px-6 text-center">{{'no_records'|trans}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% for message in app.session.flashbag.get('danger') %}
        <div class="alert alert-danger">
            <p>Message flash: {{ message }}</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
