{% extends "base.html.twig" %}

{% block body %}

    <!-- component -->
    <div class="h-screen w-full flex flex-col justify-center items-center bg-gray-900">
        <h1 class="text-9xl font-extrabold text-white tracking-widest">404</h1>
        <div class="bg-lightBlue px-2 text-sm rounded rotate-12 absolute">
            Page Not Found
        </div>
        <div class=" mt-6 text-white">
            <p class="mt-6">La page que vous recherchez n'existe pas.</p>
        </div>
        <button class="mt-5">
            <a class="relative inline-block text-sm font-medium bg-lightBlue group active:text-orange-500 focus:outline-none focus:ring">
                <span class="absolute inset-0 transition-transform translate-x-0.5 translate-y-0.5 bg-lightBlue group-hover:translate-y-0 group-hover:translate-x-0">
                </span>
                <span >
                    <a class="relative block px-8 py-3 bg-lightBlue border border-current" href="{{ path('app_home') }}">Home</a>
                </span>
            </a>
        </button>
    </div>


{% endblock %}
