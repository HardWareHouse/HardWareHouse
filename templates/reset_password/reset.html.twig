{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white max-w-md mx-auto p-8 border border-gray-200 rounded-lg shadow">
            <h1 class="text-4xl font-bold mb-8 text-center text-blue-600">Réinitialiser votre mot de passe</h1>

            {{ form_start(resetForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
                    {{ form_errors(resetForm.plainPassword.first) }}

                    {{ form_label(resetForm.plainPassword.second, 'Répéter le mot de passe', {'label_attr': {'class': 'block text-gray-700'}}) }}
                    {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
                    {{ form_errors(resetForm.plainPassword.second) }}
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 hover:bg-blue-700 focus:outline-none">
                    Réinitialiser le mot de passe
                </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
