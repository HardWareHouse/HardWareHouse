{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="flex h-screen flex-col justify-start items-center">
    <h1 class="text-4xl font-bold mb-8 text-center text-blue-600">Réinitialiser votre mot de passe</h1>

    {{ form_start(requestForm) }}
    <div class=" flex flex-col mb-4">
        <label >{{ form_row(requestForm.mail) }}</label>
        <label class="text-sm text-blue-600 mx-auto">
            Saisissez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </label>
    </div>
        <div>

        </div>

        <button class="w-full bg-blue-600 text-white px-4 py-2 hover:bg-blue-700">Recevoir un email</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
