<form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm({{'confirm_delete'|trans}});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button type="submit" class="font-medium text-red-600 dark:text-red-500 hover:underline focus:outline-none">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>
