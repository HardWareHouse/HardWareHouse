{{ form_start(form, {'attr': {'class': 'flex flex-col items-center justify-start pt-20 min-h-screen'}}) }}

<div class="w-full max-w-md mx-auto">
    {{ form_errors(form) }}

    <div class="mb-4">
        {{ form_label(form.nom, 'name'|trans) }}
        {{ form_widget(form.nom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        {{ form_errors(form.nom) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.prenom, 'Pr√©nom' )}}
        {{ form_widget(form.prenom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        {{ form_errors(form.prenom) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.adresse, 'address'|trans) }}
        {{ form_widget(form.adresse, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        {{ form_errors(form.adresse) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.codePostal, 'postcode'|trans) }}
        {{ form_widget(form.codePostal, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        {{ form_errors(form.codePostal) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.ville, 'city'|trans) }}
        {{ form_widget(form.ville, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        {{ form_errors(form.ville) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.email, 'email'|trans) }}
        {{ form_widget(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.telephone, 'telephone'|trans) }}
        {{ form_widget(form.telephone, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        {{ form_errors(form.telephone) }}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="mb-4">
        {{ form_label(form.entrepriseId) }}
        {{ form_widget(form.entrepriseId, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3
        text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>
    {% endif %}

    <div class="flex items-center justify-center">
        <button
            class="bg-darkBlue hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline forest:bg-[#786759] love:bg-[#FB6F92]"
            type="submit">
            {{ button_label|default('save'|trans) }}
        </button>
    </div>
</div>

{{ form_end(form) }}