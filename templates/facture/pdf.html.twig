{% block body %}

<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Devis</title>
    <style>
        body {
            font-family: 'Helvetica', 'Arial', sans-serif;
            color: #333;
        }

        .header,
        .info-section,
        .totals-table {
            width: 100%;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .header img {
            height: 50px;
        }

        .header h1 {
            margin: 0;
        }

        .info-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 24px;
            width: 100%;
        }

        .info-block {
            width: calc(50% - 10px);
        }

        .info-block h3 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .info-block p {
            margin: 2px 0;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 24px;
        }

        .table th,
        .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f8f8f8;
            font-weight: bold;
        }

        .totals-table {
            margin-top: 24px;
        }

        .totals-table td {
            padding: 8px;
            text-align: right;
        }

        .totals-table .label {
            font-weight: bold;
        }

        .totals-table .value {
            font-size: 18px;
            font-weight: bold;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }


        .header-content {
            text-align: right;
            flex-grow: 1;
        }
    </style>
</head>

<body>

    <div class="header">
        <div>
            {% if logoHwh is defined %}
            <img src="{{ logoHwh }}" />
            {% else %}
            <img src="#" />
            {% endif %}
        </div>

        <div class="header-content">
            <h2>N°Facture : {{ facture.numero }}</h2>
            <h2>Date de facturation : {{ facture.dateFacturation|date('d/m/Y') }}</h2>
        </div>
    </div>


    <div class="info-section">
        <div class="info-block">
            <h3>Entreprise : {{ entreprise.nom }}</h3>
            <p>Adresse : {{ entreprise.adresse }}</p>
            <p>Téléphone : </p> {# A rajouter #}
        </div>
        <div class="info-block">
            {% if client is defined %}
            <h3>Client : {{ client.nom }}</h3>
            <p>Adresse : {{ client.adresse }}</p>
            <p>Téléphone : {{ client.telephone }}</p>
            <p>Mail : {{ client.email }}</p>
            {% else %}
            <p>test</p>
            {% endif %}
                
        </div>
    </div>



    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>QTE</th>
                <th>Prix HT</th>
                <th>Montant TVA</th>
                <th>Montant TTC</th>
            </tr>
        </thead>
        <tbody>
            {% set sousTotalHT = 0 %}
            {% set tauxTVA = 0.20 %}
            {% for detail in facture.getDetailFacture %}
                {% set prixHT = detail.getPrix() %}
                {% set montantTVA = prixHT * tauxTVA %}
                {% set prixTTC = prixHT + montantTVA %}
                <tr>
                    <td>{{ detail.getProduit().getNom() }}</td>
                    <td>{{ detail.getQuantite() }}</td>
                    <td>{{ prixHT }}€</td>
                    <td>{{ montantTVA }}€</td>
                    <td>{{ prixTTC }}€</td>
                </tr>
                {% set sousTotalHT = sousTotalHT + prixHT %}
            {% endfor %}
            {% set totalTVA = sousTotalHT * tauxTVA %}
            {% set totalTTC = sousTotalHT + totalTVA %}
        </tbody>
    </table>
    
    <table class="totals-table">
        <tr>
            <td class="label">Sous-total HT</td>
            <td class="value">{{ sousTotalHT }}€</td>
        </tr>
        <tr>
            <td class="label">Total TVA (20%)</td>
            <td class="value">{{ totalTVA }}€</td>
        </tr>
        <tr>
            <td class="label">Total TTC</td>
            <td class="value">{{ totalTTC }}€</td>
        </tr>
    </table>    

</body>

</html>

{% endblock %}