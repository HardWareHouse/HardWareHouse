{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

{% include 'component/sidebar.html.twig' %}

    <div class="container mx-auto my-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-4">Détails du produit</h1>
        </div>

        <div class="max-w-2xl mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <table class="w-full text-sm text-left text-gray-500">
                <tbody class="bg-white divide-y divide-gray-200">
                    <tr>
                        <th class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">Nom</th>
                        <td class="px-6 py-4">{{ produit.nom }}</td>
                    </tr>
                    <tr>
                        <th class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">Description</th>
                        <td class="px-6 py-4">{{ produit.description }}</td>
                    </tr>
                    <tr>
                        <th class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">Prix</th>
                        <td class="px-6 py-4">{{ produit.prix }}€</td>
                    </tr>
                    <tr>
                        <th class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">Stock</th>
                        <td class="px-6 py-4">{{ produit.stock }}</td>
                    </tr>
                    <tr>
                        <th class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">Créé le</th>
                        <td class="px-6 py-4">{{ produit.CreatedAt ? produit.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <a href="{{ path('app_produit_index') }}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700">
                <i class="fas fa-arrow-left mr-2"></i> Retour
            </a>
        </div>
    </div>
{% endblock %}
