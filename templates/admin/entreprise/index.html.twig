{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block content %}
<div class="container mx-auto my-8 pl-14">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-semibold text-gray-700">Entreprise</h1>
        <a href="{{ path('app_entreprise_new') }}"
            class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            <i class="fas fa-plus mr-2"></i> Ajouter une nouvelle entreprise
        </a>
    </div>

    <div class="overflow-x-auto relative shadow-md sm:rounded-lg mt-6">
        <table class="w-full text-sm text-center text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="py-3 px-6">Nom</th>
                    <th scope="col" class="py-3 px-6">Adresse</th>
                    <th scope="col" class="py-3 px-6">Description</th>
                    <th scope="col" class="py-3 px-6">Information Fiscale</th>
                    <th scope="col" class="py-3 px-6">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for entreprise in entreprises %}
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="py-4 px-6">{{ entreprise.nom }}</td>
                    <td class="py-4 px-6">{{ entreprise.adresse }}</td>
                    <td class="py-4 px-6">{{ entreprise.description }}</td>
                    <td class="py-4 px-6">{{ entreprise.informationFiscale }}</td>
                    <td class="py-4 px-6">
                        <div class="flex items-center justify-center">
                            <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}"
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}"
                                class="font-medium text-green-600 dark:text-green-500 hover:underline ml-4">
                                <i class="fas fa-edit"></i>
                            </a>
                            <div class="ml-4">
                                {{ include('admin/entreprise/_delete_form.html.twig', {'entreprise': entreprise}) }}
                            </div>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="py-4 px-6 text-center">Il n'existe aucune entreprise.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/entrepriseDatatable.js', 'local') }}"> </script>
{% endblock %}