{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block content %}
<div class="container mx-auto my-8 flex-grow p-6 forest:bg-lightBrown">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-semibold text-gray-700 dark:text-white forest:text-white love:text-[#FFE5EC]">{{'company_list'|trans}}</h1>
        <a href="{{ path('app_entreprise_new') }}"
            class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 love:bg-darkLove
 forest:bg-darkBrown">
            <i class="fas fa-plus mr-2"></i> {{'company_new'|trans}}
        </a>
    </div>

    <div class="overflow-x-auto relative sm:rounded-lg mt-6 forest:bg-lightBrown">
        <table id="entrepriseTable" class="w-full text-sm text-center text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr class="forest:bg-darkBrown forest:text-white">
                    <th scope="col" class="py-3 px-6 love:bg-darkLove
 love:text-[#FFE5EC]">Nom</th>
                    <th scope="col" class="py-3 px-6 love:bg-darkLove
 love:text-[#FFE5EC]">Adresse</th>
                    <th scope="col" class="py-3 px-6 love:bg-darkLove
 love:text-[#FFE5EC]">Description</th>
                    <th scope="col" class="py-3 px-6 love:bg-darkLove
 love:text-[#FFE5EC]">Telephone</th>
                    <th scope="col" class="py-3 px-6 love:bg-darkLove
 love:text-[#FFE5EC]">Actions</th>
                </tr>
                <tr class="forest:bg-darkBrown forest:text-white love:bg-darkLove
">
                    <th><input type="text" placeholder="Nom entreprise..." class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Adresse entreprise..." class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Description..." class="form-control form-control-sm" /></th>
                    <th><input type="text" placeholder="Information fiscale..." class="form-control form-control-sm" />
                    </th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for entreprise in entreprises %}
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="py-4 px-6">{{ entreprise.nom }}</td>
                    <td class="py-4 px-6">{{ entreprise.adresse }}</td>
                    <td class="py-4 px-6">{{ entreprise.description }}</td>
                    <td class="py-4 px-6">{{ entreprise.telephone }}</td>
                    <td class="py-4 px-6">
                        <div class="flex items-center justify-center">
                            <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}"
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}"
                                class="font-medium text-green-600 dark:text-green-500 hover:underline ml-4">
                                <i class="fas fa-edit"></i>
                            </a>
                            <div class="ml-4">
                                {{ include('admin/entreprise/_delete_form.html.twig', {'entreprise': entreprise}) }}
                            </div>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="py-4 px-6 text-center">{{'no_company'|trans}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}





{% block javascripts %}
{{ parent() }}

<script src="{{ asset('js/entrepriseDatatable.js', 'local') }}"> </script>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/entreprise.css', 'local') }}">
{% endblock %}