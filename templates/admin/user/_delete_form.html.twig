<form method="post" action="{{ path('app_user_delete', {'uuid': user.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.uuid) }}">
    <button type="submit" class="font-medium text-red-600 dark:text-red-500 hover:underline focus:outline-none">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>
