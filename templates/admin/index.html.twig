{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
<div class="flex flex-col items-center text-center justify-around h-screen ml-8 overflow-scroll">
    <div>
        <h1 class="text-4xl font-semibold my-2 text-blue-500">Interface Administrateur</h1>
        <h2>Votre Dashboard Admin</h2>
    </div>

    <div class="flex flex-col md:flex-row w-full">
        {% set cards = [
            {
                'title': 'Nombre d\'utilisateurs',
                'count': user_count,
                'path': path('app_user_index')
            },
            {
                'title': 'Nombre d\'entreprise',
                'count': entreprise_count,
                'path': path('app_entreprise_index')
            },
            {
                'title': 'Nombre de devis',
                'count': devis_count,
                'path': path('app_devis_index')
            },
            {
                'title': 'Nombre de Produits',
                'count': produit_count,
                'path': path('app_produit_index')
            }
        ] %}

        {% for card in cards %}
            <div class="border border-gray-300 h-72 w-full md:w-3/4 m-4">
                <div class="bg-blue-500 w-full h-12 flex items-center text-center justify-center">
                    <h3 class="text-white font-bold">{{ card.title }}</h3>
                </div>

                <p class="py-4">{{ card.count }}</p>
                <a href="{{ card.path }}" class="bg-blue-500 text-white px-4 py-2 rounded">Voir en détails</a>
            </div>
        {% endfor %}
    </div>

    <div class="flex flex-col md:flex-row w-full">
        {% set userCards = latest_users|slice(0, 5) %}
        {% set entrepriseCards = latest_entreprises|slice(0, 5) %}

        <div class="border border-gray-300 h-72 w-full md:w-3/4 m-4">
            <div class="bg-blue-500 w-full h-12 flex items-center text-center justify-center">
                <h3 class="text-white font-bold">Gestion des utilisateurs : les 5 derniers inscrits</h3>
            </div>

            {% for user in userCards %}
                <p class="py-4">{{ user.username }} - {{ user.mail }} - {{ user.entreprise.nom }}</p>
            {% endfor %}
        </div>

        <div class="border border-gray-300 h-72 w-full md:w-3/4 m-4">
            <div class="bg-blue-500 w-full h-12 flex items-center text-center justify-center">
                <h3 class="text-white font-bold">Gestion des entreprises : les 5 dernières créées</h3>
            </div>

            {% for entreprise in entrepriseCards %}
                <p class="py-4">{{ entreprise.nom }} - {{ entreprise.email }} - {{ entreprise.ville }}</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}