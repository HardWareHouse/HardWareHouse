    <div class="w-2/5 flex flex-col justify-center px-12">
        {% if error %}
        <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            Vous êtes connectées en tant que {{ app.user.userIdentifier }}, <a
                href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
        {% endif %}

        <h1 class="text-4xl font-bold mb-8 text-center text-blue-600">Connexion</h1>
        <form action="{{ path('app_login') }}" method="post">
            <div class="mb-4">
                <label for="inputEmail" class="block text-lg mb-2 text-blue-600">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required
                    class="w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500"
                    autocomplete="username" autofocus>
            </div>
            <div class="mb-4">
                <label for="inputPassword" class="block text-lg mb-2 text-blue-600">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" required
                    class="w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500"
                    autocomplete="current-password">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center">
                    <input type="checkbox" id="remember_me" name="_remember_me" class="mr-2">
                    <label for="remember_me" class="text-sm text-blue-600">Se souvenir de moi</label>
                </div>
                <a href="/reset-password" class="text-sm text-blue-600 hover:underline">Mot de passe
                    oublié ?</a>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 hover:bg-blue-700">Se
                connecter</button>
        </form>

        <p class="mt-4 text-center ">
            Vous ne possédez pas de compte ?
            <a href="{{ path('app_register') }}" class="text-blue-600 hover:underline">Inscrivez-vous</a>
        </p>
    </div>
</div>


{% endblock %}