        </div>
    </div>

    <div class="w-full flex flex-col justify-center px-12 sm:w-2/5">
        <img  class="w-full h-fit lg:hidden md:hidden" src="{{ asset('assets/icon/hwh.png') }}" alt="">
        {% for flash_error in app.flashes('verify_email_error') %}
        <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700">
            {{ flash_error }}
        </div>
        {% endfor %}

        <h1 class="text-4xl font-bold mb-8 text-center text-blue-600">{{'registration'|trans}}</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div class="space-y-2">
            <label for="registrationForm_mail" class="text-blue-600">{{'email'|trans}}</label>
            {{ form_widget(registrationForm.mail, {'id': 'registrationForm_mail', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.mail) }}
        </div>

        <div class="space-y-2">
            <label for="registrationForm_username" class="text-blue-600">{{'name'|trans}}</label>
            {{ form_widget(registrationForm.username, {'id': 'registrationForm_username', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="space-y-2">
            <label for="registrationForm_plainPassword" class="text-blue-600">{{ 'password'|trans }}</label>
            {{ form_widget(registrationForm.plainPassword, {'id': 'registrationForm_plainPassword', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
                <small class="text-gray-500">{{ form_help(registrationForm.plainPassword) }}</small>

            {{ form_errors(registrationForm.plainPassword) }}

        </div>

        <div class="space-y-2">
            <label for="registrationForm_confirmPassword" class="text-blue-600">{{ 'confirm password'|trans }}</label>
            {{ form_widget(registrationForm.confirmPassword, {'id': 'registrationForm_confirmPassword', 'attr': {'class': 'w-full px-4 py-2 border focus:outline-none focus:ring focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.confirmPassword) }}
        </div>


        <div class="flex items-center mb-6">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
            <label for="registrationForm_agreeTerms" class="text-blue-600">
                {{'i_accept'|trans}} <a href="{{ path('app_cgu') }}" class="text-blue-600 hover:underline" target="_blank">{{'cgu'|trans}}</a>
            </label>
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
        

        <button type="submit"
            class="w-full bg-blue-600 text-white px-4 py-2 hover:bg-blue-700 focus:outline-none">
            {{'signup'|trans}}
        </button>

        <div class="mt-4 text-center">
            {{'already_user'|trans}} <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">{{'login'|trans}}</a>
        </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
<div class="absolute top-4 right-4">
    <div class="flex text-sm font-medium bg-darkBlue w-28 h-10 place-items-center place-content-center rounded-md">
        <ul class="text-white">
            {% if app.request.locale == 'fr' %}
                <li><a class="dropdown-item" href="{{ path('app_home', {_locale: 'en'}) }}"><span class="fi fi-gb me-1"></span> English</a></li>
            {% else %}
                <li><a class="dropdown-item" href="{{ path('app_home', {_locale: 'fr'}) }}"><span class="fi fi-fr me-1"></span> Fran√ßais</a></li>
            {% endif %}
        </ul>
    </div>
</div>
{% endblock %}